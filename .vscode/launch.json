{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LldbKernelDebug",
            "type": "lldb",
            "request": "attach",
            "targetCreateCommands": ["file ${workspaceFolder}/vmlinux"],
            "processCreateCommands": ["gdb-remote localhost:1234"],
            "program": "${workspaceFolder}/vmlinux", // for loading symbols from running program
            "stopOnEntry": false,
            "preLaunchTask": "start qemu",
            "postDebugTask": "stop qemu"
        },
        {
            // 需要安装native debug插件
            "name": "GdbKernelDebug",
            "type": "gdb",
            "request": "attach",
            "debugger_args": [
                // "vmlinux",
                // "-ex",
                // "target remote :1234"
            ],
            "cwd": "${workspaceFolder}",
            // if you want to connect at entry point (requires remote program to start paused)
            // "stopAtEntry": true,
            // "stopAtConnect": true,
            "executable": "vmlinux",
            "target": ":1234",
            "preLaunchTask": "start qemu",
            "postDebugTask": "stop qemu",
            "remote": true
        }
    ]
}
